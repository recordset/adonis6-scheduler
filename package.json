{
    "name": "@recordset/adonis6-scheduler",
    "description": "",
    "version": "1.2.1",
    "engines": {
        "node": ">=20.6.0"
    },
    "main": "./build/index.js",
    "type": "module",
    "files": [
        "src",
        "build/commands",
        "build/providers",
        "build/services",
        "build/src",
        "build/stubs",
        "build/index.js",
        "build/index.d.ts",
        "build/configure.js",
        "build/configure.d.ts"
    ],
    "exports": {
        ".": "./build/index.js",
        "./commands": "./build/commands/main.js",
        "./commands/*": "./build/commands/*.js",
        "./types": "./build/src/types.js",
        "./task": "./build/src/scheduler/task.js",
        "./services/*": "./build/services/*.js",
        "./scheduler_provider": "./build/providers/scheduler_provider.js"
    },
    "scripts": {
        "index:commands": "adonis-kit index build/commands",
        "build": "npm run clean && npm run build-only && npm run copyfiles && npm run index:commands",
        "build-only": "tsc",
        "clean": "del-cli build",
        "copyfiles": "copyfiles \"stubs/**/**/*.stub\" build",
        "format": "prettier --write .",
        "lint": "eslint .",
        "release": "npx release-it",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "adonisjs",
        "adonisjs 6",
        "scheduler",
        "cron"
    ],
    "author": "RecordSet",
    "license": "MIT",
    "homepage": "https://github.com/recordset/adonis6-scheduler#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/recordset/adonis6-scheduler.git"
    },
    "bugs": {
        "url": "https://github.com/recordset/adonis6-scheduler/issues"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.7.0",
        "@adonisjs/core": "^6.12.0",
        "@adonisjs/prettier-config": "^1.3.0",
        "@adonisjs/tsconfig": "^1.3.0",
        "@japa/assert": "^3.0.0",
        "@japa/runner": "^3.1.4",
        "@swc/core": "^1.6.3",
        "@types/ms": "^0.7.34",
        "@types/node": "^20.14.5",
        "@types/node-schedule": "^2.1.7",
        "@types/proper-lockfile": "^4.1.4",
        "c8": "^10.1.2",
        "copyfiles": "^2.4.1",
        "del-cli": "^5.1.0",
        "np": "^10.0.6",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "peerDependencies": {
        "@adonisjs/core": "^6.2.0"
    },
    "publishConfig": {
        "access": "public",
        "tag": "latest"
    },
    "np": {
        "message": "chore(release): %s",
        "tag": "latest",
        "branch": "main",
        "anyBranch": false
    },
    "c8": {
        "reporter": [
            "text",
            "html"
        ],
        "exclude": [
            "tests/**"
        ]
    },
    "prettier": "@adonisjs/prettier-config",
    "dependencies": {
        "cron-time-generator": "^2.0.3",
        "cronstrue": "^2.50.0",
        "ms": "^2.1.3",
        "node-schedule": "^2.1.1",
        "proper-lockfile": "^4.1.2"
    }
}
